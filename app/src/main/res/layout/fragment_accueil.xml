<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Fragment.AccueilFragment">

    <TextView
        android:id="@+id/txtAccueilTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Bienvenue chez Hello Mariage"
        android:textColor="@color/rose_bonbon"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/p_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Nous organisons le plus belle événement de votre vie grâce à notre équipe chaleureuse et nos thèmes incroyable !!!"
        android:textColor="@color/rose_bonbon"
        android:textSize="18dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAccueilTitle" />


    <TextView
        android:id="@+id/p_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="Enfin une équipe qui vous accompagnera dans toutes les étapes de vos préparatifs ! Vous y trouverez les meilleures conseils - pour organiser pas à pas votre mariage."
        android:textColor="@color/rose_bonbon"
        android:textSize="18dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p_1" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_accueil"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p_2">

        <ImageView
            android:id="@+id/img_accueil"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher_80_foreground"
            app:layout_constraintBottom_toBottomOf="@+id/card_view_accueil"
            app:layout_constraintEnd_toEndOf="@+id/card_view_accueil"
            app:layout_constraintStart_toStartOf="@+id/card_view_accueil"
            app:layout_constraintTop_toBottomOf="@+id/p_2"
            tools:ignore="ContentDescription" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtRecommandation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Recommandations"
        android:textColor="@color/rose_bonbon"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_view_accueil" />

    <LinearLayout
        android:id="@+id/linearRecommandation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRecommandation">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="7dp"
            android:focusable="true"
            android:background="@drawable/state_recommandation"
            android:id="@+id/linearReco1"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/cardReco1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="3dp"
                app:cardCornerRadius="10dp"
                android:layout_gravity="center"
                app:cardElevation="10dp" >

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/imgReco1"
                    android:src="@mipmap/ic_launcher_80_foreground"
                    android:layout_gravity="center"
                    tools:ignore="ContentDescription" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="science fiction"
                android:layout_marginTop="4dp"
                android:layout_gravity="center"
                android:id="@+id/titleReco2"
                android:textColor="@color/rose_bonbon"
                android:layout_marginBottom="11dp"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:focusable="true"
            android:background="@drawable/state_recommandation"
            android:id="@+id/linearReco2"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/cardReco2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="3dp"
                app:cardCornerRadius="10dp"
                android:layout_gravity="center"
                app:cardElevation="10dp" >

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/imgReco2"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_launcher_80_foreground"
                    tools:ignore="ContentDescription" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aventurier"
                android:layout_marginTop="4dp"
                android:layout_gravity="center"
                android:id="@+id/titleReco3"
                android:textColor="@color/rose_bonbon"
                android:layout_marginBottom="11dp"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:orientation="vertical"
            android:focusable="true"
            android:background="@drawable/state_recommandation"
            android:id="@+id/linearReco3"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/cardReco3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="3dp"
                app:cardCornerRadius="10dp"
                android:layout_gravity="center"
                app:cardElevation="10dp" >

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/imgReco3"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_launcher_80_foreground"
                    tools:ignore="ContentDescription" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="moyen âge"
                android:layout_marginTop="4dp"
                android:layout_gravity="center"
                android:id="@+id/titleReco1"
                android:textColor="@color/rose_bonbon"
                android:layout_marginBottom="11dp"
                android:textStyle="bold"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>